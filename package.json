    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2023,
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/consistent-type-imports": "off"
    }
